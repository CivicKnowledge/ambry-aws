{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "bucket",
            "Effect": "Allow",
            "Action": [
                "s3:GetBucketLocation",
                "s3:ListAllMyBuckets",
                "s3:ListBucket"
            ],
            "Resource": []
        },
        {
            "Sid": "read",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject"
            ],
            "Resource": []
        },
        {
            "Sid": "write",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject"
            ],
            "Resource": []
        }
    ]
}